<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape  android:shape="rectangle">
            <size android:height="42dp" />
            <!-- 填充颜色 -->
            <solid android:color="@color/color_ffeb50" />

            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="@color/transparent" />

            <!-- 矩形的圆角半径 -->
            <corners android:radius="4dp" />

            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:radius="15dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
            <!-- 描邊 -->
            <stroke android:width="1dp" android:color="#fada00" android:dashWidth="8dp" android:dashGap="0dp" />

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <size android:height="42dp"/>
            <!-- 填充颜色 -->
            <solid android:color="#fada00" />

            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="@color/transparent" />

            <!-- 矩形的圆角半径 -->
            <corners android:radius="4dp" />

            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:radius="15dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
            <!-- 描邊 -->
            <stroke android:width="1dp" android:color="#fada00" android:dashWidth="8dp" android:dashGap="0dp" />

        </shape>
    </item>
</selector>

